isbn = {1361-8415 (Print)},
issn = {13618415},
journal = {Med. Image Anal.},
keywords = {Anatomical variations,Bayesian modeling,Distance map,Interpolation,Logarithm of odds,Logistic function,Shape representation,Statistical classification},
