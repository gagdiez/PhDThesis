file = {:user/ggallard/home/papers/1-s2.0-S1053811913003480-main.pdf:pdf},
isbn = {1095-9572 (Electronic)$\backslash$r1053-8119 (Linking)},
issn = {10959572},
journal = {Neuroimage},
keywords = {Bok,Cortical,Cytoarchitecture,High-resolution MRI,Lamina,Layers,Model,Myeloarchitecture,Profiles,Volume},
pages = {210--220},
pmid = {23603284},
